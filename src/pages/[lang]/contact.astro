---
import { getI18nStaticPaths, useTranslations } from '../../i18n/utils';
import type { Lang } from '../../i18n/ui';

export function getStaticPaths() {
  return getI18nStaticPaths();
}

const lang = Astro.params.lang as Lang;
const t = useTranslations(lang);

import BaseLayout from "../../layouts/BaseLayout.astro";
import Title from "../../components/common/PageTitle.astro";
import ContactInfo from "../../components/contact/ContactInfo.astro";
import ContactForm from "../../components/contact/ContactForm.astro";
---

<BaseLayout lang={lang}>
    <main class="content">
        <Title text={t("contact.title")} id="contactTitle" />
        <div class="contact">
            <ContactInfo lang={lang} />
            <ContactForm lang={lang} />
        </div>
    </main>
</BaseLayout>

<style>
  .contact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  @media (max-width: 1158px) {
    .contact {
      grid-template-columns: 1fr;
    }
  }
</style>
