---
import { useTranslations } from "../../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="status">
    <span class="status-dot">ðŸŸ¢</span>
    <span>{t("contact.info.available")}</span>
</div>

<style>
    .status {
        display: flex;
        /* align-items: center; */
        gap: 10px;
        font-weight: bold;
        margin-top: 30px;
    }

    .status-dot {
        display: inline-block;
        animation: pulse-glow 1.5s infinite;
        filter: drop-shadow(0 0 2px #4caf50) drop-shadow(0 0 5px #4caf50)
            drop-shadow(0 0 10px #4caf50);
    }

    @keyframes pulse-glow {
        0% {
            filter: drop-shadow(0 0 2px #4caf50) drop-shadow(0 0 5px #4caf50)
                drop-shadow(0 0 10px #4caf50);
        }
        50% {
            filter: drop-shadow(0 0 5px #4caf50) drop-shadow(0 0 15px #4caf50)
                drop-shadow(0 0 25px #4caf50);
        }
        100% {
            filter: drop-shadow(0 0 2px #4caf50) drop-shadow(0 0 5px #4caf50)
                drop-shadow(0 0 10px #4caf50);
        }
    }
</style>
