---
import BaseLayout from "../layouts/BaseLayout.astro";

import Title from "../components/common/PageTitle.astro";
import AboutText from "../components/about/AboutText.astro";
import AboutCube from "../components/about/AboutCube.astro";
import AboutSocial from "../components/about/AboutSocial.astro";
---

<BaseLayout>
    <main class="content">
        <Title text="ME" id="aboutTitle" />
        <div class="about-txtimg">
            <div class="about-txtimg-info">
                <AboutText />
            </div>
            <div class="about-txtimg-image">
                <div class="about-txtimg-image-img">
                    <AboutCube />
                </div>
                <AboutSocial />
            </div>
        </div>
    </main>
</BaseLayout>

<style>
    .about {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .about-txtimg {
        display: flex;
        flex-direction: row;
    }

    .about-txtimg-info {
        /* flex: 1; */
        /* margin-top: 45px; */
        text-align: left;
        overflow-wrap: break-word;
    }

    .about-txtimg-info strong {
        color: var(--purple-dark);
    }

    .about-txtimg-image-img {
        /* overflow: hidden; */
        height: auto;
        margin-bottom: 20px;
        position: relative;
    }

    .about-txtimg-image-img img {
        max-width: 100%;
        height: 100%;
        max-height: 100%;
    }

    .about-txtimg-image {
        padding: 0 0 0 75px;
    }

    @media screen and (max-width: 1250px) {
        .about-txtimg {
            flex-direction: column-reverse;
        }

        .about-txtimg-image {
            padding: 0;
        }
    }

    @media screen and (max-width: 550px) {
        .about-txtimg-image-img {
            height: auto;
        }

        .imageCube {
            width: 100px;
            height: 100px;
        }
    }
</style>
