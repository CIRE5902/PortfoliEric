---
// src/components/ThemeIcon.astro
import { Image } from "astro:assets";
import imageMoon from "../assets/moon.png";
import imageSun from "../assets/sun.svg";
import imageGem from "../assets/gem.svg";
---

<>
  <Image src={imageMoon} alt="Moon Icon" class="theme-icon" id="darkIcon" />
  <Image src={imageSun} alt="Sun Icon" class="theme-icon" id="lightIcon" />
  <Image src={imageGem} alt="Gem Icon" class="theme-icon" id="ericIcon" />
</>
