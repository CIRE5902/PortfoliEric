---
import "../css/components/navbar.css";

import { Image } from "astro:assets";
import imageAvatar from "../assets/avatar.png";
import imageGem from "../assets/gem.svg";
import imageSun from "../assets/sun.svg";
import imageMoon from "../assets/moon.png";

import ThemeIcon from "./ThemeIcons.astro";

---

<nav class="navbar">
  <ul class="navbar-nav">
    <!-- Logo principal -->
    <li class="logo">
      <a href="/" class="nav-link">
        <span class="link-text logo-text" id="menuMenu">Main</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="nav-icon"
        >
          <path
            d="M12.293 7.293a1 1 0 011.414 0L18 11.586l-4.293 4.293a1 1 0 11-1.414-1.414L15.586 12l-3.293-3.293a1 1 0 010-1.414z"
          ></path>
          <path
            d="M6.293 7.293a1 1 0 011.414 0L12 11.586l-4.293 4.293a1 1 0 01-1.414-1.414L9.586 12l-3.293-3.293a1 1 0 010-1.414z"
          ></path>
        </svg>
      </a>
    </li>

    <!-- Inicio -->
    <li class="nav-item">
      <a href="/" class="nav-link">
        <Image src={imageAvatar} alt="avatar" class="nav-icon" />
        <span class="link-text" id="menuHome">Home</span>
      </a>
    </li>

    <!-- About -->
    <li class="nav-item">
      <a href="/pages/about.html" class="nav-link">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
          <circle cx="12" cy="8" r="4"></circle>
          <path d="M12 12c-3.31 0-6 2.69-6 6v2h12v-2c0-3.31-2.69-6-6-6z"></path>
        </svg>
        <span class="link-text" id="menuAbout">About</span>
      </a>
    </li>

    <!-- Projects -->
    <li class="nav-item">
      <a href="/#projects" class="nav-link">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" width="24" height="24">
          <path
            d="M8.59 16.34L3.25 12l5.34-4.34L7.16 6 0 12l7.16 6 1.43-1.66zm7.82-8.68L20.75 12l-5.34 4.34 1.43 1.66L24 12l-7.16-6-1.43 1.66zm-6.69 14.12L11.93 2h-1.95l-2.19 19.78h1.95z"
          ></path>
        </svg>
        <span class="link-text" id="menuProjects">Projects</span>
      </a>
    </li>

    <!-- Stack -->
    <li class="nav-item">
      <a href="/pages/stack.html" class="nav-link">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" width="24" height="24">
          <path
            d="M12 2L2 7l10 5 10-5-10-5zm0 18v-6l-8-4v4l8 4zm8-4v-4l-8 4v6l8-4zm-16-.35l8 4.36 8-4.36v.84l-8 4.36-8-4.36v-.84z"
          ></path>
        </svg>
        <span class="link-text" id="menuStack">Stack</span>
      </a>
    </li>

    <!-- Contact -->
    <li class="nav-item">
      <a href="/pages/contact.html" class="nav-link">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" width="24" height="24">
          <path
            d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-2 8H6v-2h12v2zm-3 4H6v-2h9v2zm3-8H6V6h12v2z"
          ></path>
        </svg>
        <span class="link-text" id="menuContact">Contact</span>
      </a>
    </li>

    <!-- Theme Switcher -->
    <li class="nav-item">
      <a href="#" class="nav-link" id="themeButton">
        <ThemeIcon />
        <span class="link-text" id="menuTheme">Theme</span>
      </a>
    </li>
  </ul>
</nav>

<script src="/js/theme.js" defer></script>
