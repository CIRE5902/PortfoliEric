---
import StackCard from "./StackCard.astro";
const { categoria, tecnologias } = Astro.props;

interface Tecnologia {
    nombre: string;
    icono: string;
    nivel: string;
    enlace?: string;
}
---

<div class="stack-category">
    <h2 class="category-title">{categoria}</h2>
    <div class="cards-grid">
        {
            (tecnologias as Tecnologia[]).map((tec) => (
                <StackCard
                    nombre={tec.nombre}
                    icono={tec.icono}
                    nivel={tec.nivel}
                    enlace={tec.enlace}
                />
            ))
        }
    </div>
</div>

<style>
    .stack-category {
        padding: 1rem;
        border-radius: 8px;
    }
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 1rem;
    }
</style>
