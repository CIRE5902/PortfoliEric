---
import { getI18nStaticPaths, useTranslations } from '../../i18n/utils';
import type { Lang } from '../../i18n/ui';

export async function getStaticPaths() {
  return getI18nStaticPaths();
}

const lang = Astro.params.lang as Lang;
const t = useTranslations(lang);

import BaseLayout from "../../layouts/BaseLayout.astro";

import Title from "../../components/common/PageTitle.astro";
import AboutText from "../../components/about/AboutText.astro";
import AboutCube from "../../components/about/AboutCube.astro";
import AboutSocial from "../../components/about/AboutSocial.astro";
---

<BaseLayout lang={lang}>
  <main class="content about">
    <Title text={t("about.title")} id="aboutTitle" />
    <div class="about-txtimg">
      <div class="about-txtimg-info">
        <AboutText lang={lang} />
      </div>
      <div class="about-txtimg-image">
        <div class="about-txtimg-image-img">
          <AboutCube lang={lang} />
        </div>
        <AboutSocial lang={lang} />
      </div>
    </div>
  </main>
</BaseLayout>

<style>
    .about {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .about-txtimg {
        display: flex;
        flex-direction: row;
    }

    .about-txtimg-info {
        /* flex: 1; */
        /* margin-top: 45px; */
        text-align: left;
        overflow-wrap: break-word;
    }

    .about-txtimg-info strong {
        color: var(--purple-dark);
    }

    .about-txtimg-image-img {
        /* overflow: hidden; */
        height: auto;
        margin-bottom: 20px;
        position: relative;
    }

    .about-txtimg-image-img img {
        max-width: 100%;
        height: 100%;
        max-height: 100%;
    }

    .about-txtimg-image {
        padding: 0 0 0 75px;
    }

    @media screen and (max-width: 1250px) {
        .about-txtimg {
            flex-direction: column-reverse;
        }

        .about-txtimg-image {
            padding: 0;
        }
    }

    @media screen and (max-width: 550px) {
        .about-txtimg-image-img {
            height: auto;
        }

        .imageCube {
            width: 100px;
            height: 100px;
        }
    }
</style>