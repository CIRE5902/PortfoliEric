<style>
    h2 {
        margin-bottom: 30px;
    }

    .contact-info {
        padding: clamp(1rem, 5vw, 2rem);
        border-radius: 1rem;
        background-color: var(--card-glass);
    }

    .info-list {
        list-style: none;
        display: grid;
        row-gap: 15px;
        padding: 5px;
    }

    .info-list li {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
        gap: 15px;
    }

    .info-list li:hover .social-link {
        color: var(--purple-dark);
    }

    .info-list div {
        display: grid;
        grid-template-rows: 1fr 1fr;
        /* gap: 5px; */
    }

    .social-name {
        font-size: 14px;
    }

    .social-link {
        font-size: 18px;
        font-weight: bold;
    }

    .contact-icon {
        font-size: 30px;
    }

    hr {
        margin: 1.5rem 0;
        border: none;
        border-top: 1px solid var(--card-glass);
    }

    .status {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: bold;
        margin-top: 30px;
    }

    .status-dot {
        display: inline-block;
        animation: pulse-glow 1.5s infinite;
        filter: drop-shadow(0 0 2px #4caf50) drop-shadow(0 0 5px #4caf50)
            drop-shadow(0 0 10px #4caf50);
    }

    @keyframes pulse-glow {
        0% {
            filter: drop-shadow(0 0 2px #4caf50) drop-shadow(0 0 5px #4caf50)
                drop-shadow(0 0 10px #4caf50);
        }
        50% {
            filter: drop-shadow(0 0 5px #4caf50) drop-shadow(0 0 15px #4caf50)
                drop-shadow(0 0 25px #4caf50);
        }
        100% {
            filter: drop-shadow(0 0 2px #4caf50) drop-shadow(0 0 5px #4caf50)
                drop-shadow(0 0 10px #4caf50);
        }
    }
</style>
