---
import { useTranslations } from "../../i18n/utils";
import { Icon } from "astro-icon/components";
const { lang, nombre, icono, nivel, enlace } = Astro.props;
const t = useTranslations(lang);
---

<a
  href={enlace || "#"}
  target="_blank"
  rel="noopener noreferrer"
  class="stack-card-link"
>
  <div class="stack-card">
    <div class="icon-wrapper"></div>
    {icono && <Icon name={icono} class="stack-icon" />}
    <div class="stack-name">{nombre}</div>
    <div class="stack-level">{t(`stack.levels.${nivel}`)}</div>
  </div>
</a>

<style>
  .stack-card {
    background-color: var(--card-glass);
    border: 2px solid transparent;
    border-radius: 10px;
    padding: 1rem;
    text-align: center;
    transition: transform 0.3s ease;
    color: var(--text-primary);
  }

  .stack-card:hover {
    transform: scale(1.03);
    box-shadow: 0 0 10px var(--purple-dark);
  }

  .icon-wrapper {
    margin-bottom: 0.5rem;
  }

  .stack-name {
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
  }

  .stack-level {
    font-size: 0.8rem;
    opacity: 0.75;
  }

  .stack-icon {
    height: 45px;
    width: 45px;
  }
  .stack-card-link {
    text-decoration: none;
  }
</style>
