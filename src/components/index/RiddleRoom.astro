---
import Room from "./riddleRoom/Room.astro";
import Tv from "./riddleRoom/Tv.astro";
import Lamp from "./riddleRoom/Lamp.astro";
import Avatar from "./riddleRoom/Avatar.astro";
import Mp3 from "./riddleRoom/Ps3.astro";
import Ps3 from "./riddleRoom/Mp3.astro";
import Volume from "./riddleRoom/Volume.astro";

import type { Lang } from "../../i18n/ui";
import { useTranslations } from "../../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="content-riddle">
  <Room>
    <Avatar lang={lang} />
    <Tv lang={lang} />
    <Mp3 lang={lang} />
    <Ps3 lang={lang} />
    <Volume />
  </Room>
  <Lamp lang={lang} />
</div>

<style is:global>
  .content-riddle {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
    position: relative;
    gap: 50px;
    overflow: hidden;
  }

  @media (max-width: 1450px) {
    .content-riddle {
      display: none;
    }
  }
</style>
