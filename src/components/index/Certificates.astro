---
import { Icon } from "astro-icon/components";

import type { Lang } from "../../i18n/ui";
import { useTranslations } from "../../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="box-certificates box-card">
  <div class="box-title">
    <Icon name="mdi:certificate" class="box-icon" />
    <h3>{t("certificates.title")}</h3>
  </div>

  <div class="box-certificates-items">
    <a href="/certificates/InglesB1_EricPerezVera.pdf" download>
      <div class="certificate-item">
        <h3>{t("certificates.names.englishB1")}</h3>
        <Icon name="mdi:download" class="download-icon" />
      </div>
    </a>
    <a href="/certificates/DAW.pdf" download>
      <div class="certificate-item">
        <h3>{t("certificates.names.daw")}</h3>
        <Icon name="mdi:download" class="download-icon" />
      </div>
    </a>
    <div class="certificate-item">
      <h3>{t("certificates.names.asix")}</h3>
      <Icon name="mdi:download" class="download-icon" />
    </div>
    <div class="certificate-item">
      <h3>{t("certificates.names.smix")}</h3>
      <Icon name="mdi:download" class="download-icon" />
    </div>
  </div>
</div>

<style>
    .box-certificates {
        padding: 1.5rem;
        box-sizing: border-box;
    }

    .box-certificates-items {
        display: grid;
        gap: 0.75rem;
    }

    @media (min-width: 600px) {
        .box-certificates-items {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 600px) {
        .box-certificates-items {
            grid-template-columns: 1fr;
        }
    }

    .certificate-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
    }

    .certificate-item:hover {
        background: var(--purple-dark);
    }

    .download-icon {
        font-size: 1.4rem;
        transition: transform 0.2s ease;
        flex-shrink: 0;
    }

    .certificate-item:hover .download-icon {
        transform: scale(1.15);
    }

    @media (max-width: 480px) {
        .certificate-item {
            align-items: center;
        }

        .certificate-item h3 {
            font-size: 1rem;
        }

        .download-icon {
            align-self: flex-end;
        }
    }
</style>
